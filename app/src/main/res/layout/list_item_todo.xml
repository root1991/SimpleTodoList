<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:padding="@dimen/list_item_text_padding"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_description"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/list_item_text_padding"
        android:layout_toRightOf="@+id/checkbox_item"
        android:layout_alignBottom="@+id/checkbox_item"
        android:layout_alignTop="@+id/checkbox_item"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/checkbox_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>